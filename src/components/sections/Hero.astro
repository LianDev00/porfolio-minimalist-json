---
import { basics } from "@/cv";
import Section from "@/components/Section.astro";

const { name, label, image, location, profiles, phone, email } = basics;

const { city, region } = location;
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <!-- Icono -->
        {city}, {region}
      </span>
      <footer>
        {
          email && (
            <a 
              href={`mailto:${email}`}
              title={`Enviar un correo electronico a ${name} al corre ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <!-- Icono -->
              ðŸ“§
            </a>
          )
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name}/>
    </figure>
  </div>
</Section>