---
import Section from "../Section.astro";

import { skills } from "@/cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map((skill) => (
        <li>
          <span>{skill}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #4a4a4e;
    color: white;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
